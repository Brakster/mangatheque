<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- Action fenêtre liste -->
  <record id="action_manga_list" model="ir.actions.act_window">
    <field name="name">Liste des Mangas</field>
    <field name="res_model">mangatheque.manga</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menu root = App -->
  <record id="menu_manga" model="ir.ui.menu">
    <field name="name">Mangathèque</field>
    <field name="app" eval="True"/>
    <field name="web_icon">mangatheque,static/description/icon.png</field>
    <!-- pas de parent_id = menu racine -->
  </record>

  <!-- Sous-menu -->
  <record id="menu_manga_list" model="ir.ui.menu">
    <field name="name">Liste des Mangas</field>
    <field name="parent_id" ref="menu_manga"/>
    <field name="action" ref="action_manga_list"/>
  </record>

</odoo>
